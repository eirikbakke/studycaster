<?xml version="1.0" encoding="UTF-8"?>
<study xmlns="namespace://no.ebakke/studycaster-configuration">
  <macrodef id="configuration-common">
    <instructions>
      <html xmlns="">
        <b>Instructions:</b>
        <ol>
          <li>Edit the spreadsheet that opened in another window<br/>
              (according to the instructions in the HIT).</li>
          <li>Save and close the spreadsheet</li>
          <li>Click the button below.</li>
          <li>Paste the confirmation code into the HIT.</li>
        </ol>
        <p align="right">
          Thanks!<br/>
          <a href="mailto:ebakke@mit.edu">ebakke@mit.edu</a>
        </p>
      </html>
    </instructions>
  </macrodef>

  <macrodef id="uploadfile-excel">
    <uploadfile>
      <filefilter>
        <description>Microsoft Excel Workbook</description>
        <extension>xls</extension>
        <extension>xml</extension>
        <extension>xlsx</extension>
        <extension>xlsm</extension>
        <extension>xlsb</extension>
      </filefilter>
    </uploadfile>
  </macrodef>

  <macrodef id="uploadfile-relspread">
    <uploadfile>
      <filefilter>
        <description>Spreadsheet Study Application files</description>
        <extension>rzw</extension>
      </filefilter>
    </uploadfile>
  </macrodef>

  <configuration id="5782" name="Recruiting">
    <macro id="configuration-common"/>
    <macro id="uploadfile-excel"/>
    <openfile>
      <remotename>currencies.xls</remotename>
      <localname>userstudyHIT_currencies.xls</localname>
      <requirement>Excel or a compatible spreadsheet application</requirement>
    </openfile>
  </configuration>

  <configuration id="6728" name="Main Excel">
    <macro id="configuration-common"/>
    <macro id="uploadfile-excel"/>
    <openfile>
      <remotename>exflat.xls</remotename>
      <localname>userstudyHIT_coursecatalog.xls</localname>
      <requirement>Excel or a compatible spreadsheet application</requirement>
    </openfile>
  </configuration>

  <configuration id="1093" name="Main Related Worksheets">
    <macro id="configuration-common"/>
    <macro id="uploadfile-relspread"/>
    <openfile>
      <remotename>rsnest.rzw</remotename>
      <localname>userstudyHIT_coursecatalog.rzw</localname>
      <requirement></requirement>
    </openfile>
  </configuration>
</study>

